<section class="flex flex-col gap-2 mt-10 items-center justify-center w-full">
  <div class="flex flex-col">
    <h3 class="font-bold text-4xl text-white"><%= room.name %> - Room</h3>
    <span class="text-white font-semibold text-xs">Users in this room: </span>
  </div>

  <section class="flex gap-5">
    <div class="py-2 px-10 flex flex-col gap-1 items-center border-2 border-orange-600 rounded-lg my-2 shadow-lg w-96">
      <h3 class="font-bold text-2xl text-white">Users in this room:</h3>
      <% User.all.each do |user| %>
        <%= next unless room.users.include?(user) %>
        <div class="rounded underline text-white my-1 font-semibold text-sm">
          <%= user.email %>
        </div>
      <% end %>
    </div>
  </section>
</section>
