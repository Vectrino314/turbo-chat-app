<section class="flex flex-col gap-2 mt-10 items-center justify-center w-full" id="room_show_<%= "#{room.id}" %>">
  <div class="flex flex-col">
    <h3 class="font-bold text-4xl text-white"><%= room.name %> - Room</h3>
  </div>

  <section class="flex gap-5">
    <div class="py-2 px-10 flex flex-col gap-1 items-center border-2 border-orange-600 rounded-lg my-2 shadow-lg w-fit">
      <h3 class="font-bold text-2xl text-white">Users in this room:</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 text-center">
        <% User.all.each do |user| %>
          <%= next unless room.users.include?(user) %>
          <div class="self-center text-white my-1 font-semibold text-sm">
            <%= user.email %>
          </div>
        <% end %>
      </div>
    </div>
  </section>

</section>

